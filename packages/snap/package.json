{
  "name": "@astrox/icsnap",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "author": "AstroX <dev@astrox.network>",
  "license": "(Apache-2.0 AND MIT)",
  "private": false,
  "homepage": "https://github.com/AstroxNetwork",
  "keywords": [
    "dfinity",
    "ic",
    "icp",
    "metamask",
    "snap",
    "dapp"
  ],
  "publishConfig": {
    "access": "public"
  },
  "description": "Adapter for installing ICSnap",
  "scripts": {
    "prebuild": "rm -rf build",
    "build": "yarn run build:lib && yarn run build:types",
    "build:lib": "tsc --build tsconfig.json",
    "build:types": "tsc --emitDeclarationOnly",
    "lint": "yarn run lint:style && yarn run lint:types",
    "lint:types": "tsc --noEmit --pretty",
    "lint:style": "eslint --color 'src/**/*.{js,ts,tsx}'",
    "lint:style:fix": "yarn run lint:style --fix",
    "test": "exit 0"
  },
  "dependencies": {
    "@astrox/icsnap-types": "^0.0.1",
    "@dfinity/identity": "^0.11.0",
    "@metamask/key-tree": "^3.0.1",
    "@types/deepmerge": "^2.2.0",
    "@types/secp256k1": "^4.0.3",
    "deepmerge": "^4.2.2",
    "secp256k1": "^4.0.3"
  }
}
